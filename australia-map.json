{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Live Performance Revenue per Capita by Australian State/Territory (2023)",
  "width": 800,
  "height": 500,
  "projection": {
    "type": "mercator",
    "center": [133, -27],
    "scale": 700
  },
  "data": {
    "url": "australia-states.topojson",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {"url": "revenue-per-capita.csv"},
        "key": "state_name",
        "fields": ["revenue_per_capita"]
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 1
  },
  "encoding": {
    "color": {
      "field": "revenue_per_capita",
      "type": "quantitative",
      "scale": {"scheme": "blues"},
      "legend": {"title": "Revenue per Capita ($AUD)"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "revenue_per_capita", "type": "quantitative", "format": "$.0f"}
    ]
  }

}
